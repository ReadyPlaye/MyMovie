<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#141931"
    tools:context=".activity.CinemaSchedActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:padding="20dp">
        <ImageView
            android:id="@+id/iv_cinema_sched_exit"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:src="@drawable/shape_exit"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="电影排期"
            android:gravity="center"
            android:textColor="#d8d8d8"
            android:textSize="16sp"/>

    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recy_cinema_sched"
        android:layout_width="match_parent"
        android:background="@drawable/shape_1c2_5"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recy_cinema_schedtwo"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>
</LinearLayout>