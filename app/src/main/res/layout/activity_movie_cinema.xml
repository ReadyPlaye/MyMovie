<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#141931"
    tools:context=".activity.MovieCinemaActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:padding="20dp">
        <ImageView
            android:id="@+id/iv_movie_cieman_exit"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:src="@drawable/shape_exit"/>
        <TextView
            android:id="@+id/tv_movie_cieman_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="名字"
            android:gravity="center"
            android:textColor="#d8d8d8"
            android:textSize="16sp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#1c2243">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <RelativeLayout
                android:id="@+id/rlt_movie_cinema"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.0">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="区域影院"
                    android:textSize="14sp"
                    android:textColor="#ffffff"/>
                <TextView
                    android:id="@+id/tv_movie_cinema"
                    android:layout_width="55dp"
                    android:layout_height="2dp"
                    android:background="#e8185e"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rlt_movie_cinema_one"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.0">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="影院时间"
                    android:textSize="14sp"
                    android:textColor="#ffffff"/>
                <TextView
                    android:id="@+id/tv_movie_cinema_one"
                    android:layout_width="55dp"
                    android:layout_height="2dp"
                    android:background="#e8185e"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rlt_movie_cinema_two"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.0">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="价格最低"
                    android:textSize="14sp"
                    android:textColor="#ffffff"/>
                <TextView
                    android:id="@+id/tv_movie_cinema_two"
                    android:layout_width="55dp"
                    android:layout_height="2dp"
                    android:background="#e8185e"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0">
                <ImageView
                    android:id="@+id/iv_movie_cinema_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/loupe"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/rlt_movie_cinema_search"
            android:background="#1c2243"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/iv_search_movie_yes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/loupe"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"/>
            <EditText
                android:id="@+id/et_movie_ciema"
                android:gravity="center_vertical"
                android:background="@null"
                android:hint="请输入影院名称"
                android:textColor="#ffffff"
                android:textSize="14sp"
                android:textColorHint="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/iv_search_movie_yes"
                android:layout_toLeftOf="@id/iv_search_movie_no"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"/>
            <ImageView
                android:id="@+id/iv_search_movie_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/close"
                android:layout_marginRight="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recy_movie_cinema"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#141931">
        </android.support.v7.widget.RecyclerView>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recy_movie_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#141931">

        </android.support.v7.widget.RecyclerView>
        <LinearLayout
            android:id="@+id/llt_movie_cinema"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#141931">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_movie_regionName"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3">

            </android.support.v7.widget.RecyclerView>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_mivie_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7">

            </android.support.v7.widget.RecyclerView>
        </LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recy_movie_cinema_search"
            android:layout_width="match_parent"
            android:background="#141931"
            android:layout_height="match_parent">

        </android.support.v7.widget.RecyclerView>

        <LinearLayout
            android:id="@+id/llt_no_movie_cinema"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="#141931"
            android:orientation="vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/no_search"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="没有相关搜索结果"
                android:textColor="#ffffff"
                android:layout_marginTop="40dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="换个词试试吧"
                android:textColor="#ffffff" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>