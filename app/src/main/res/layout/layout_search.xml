<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:padding="10dp"
        android:background="@drawable/shape_1c2_5">
        <ImageView
            android:id="@+id/iv_search_pic"
            android:layout_width="85dp"
            android:layout_height="105dp"
            android:scaleType="fitXY"
            android:background="@drawable/zhanweitu"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="105dp"
            android:orientation="vertical"
            android:layout_marginLeft="20dp">
            <TextView
                android:id="@+id/tv_search_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="名字"
                android:lines="1"
                android:ellipsize="end"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textColor="#ffffff"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/tv_search_director"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="导演"
                android:lines="1"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:textColor="#ffffff"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/tv_search_starring"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="演员"
                android:lines="1"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:textColor="#ffffff"
                android:textSize="12sp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/tv_search_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="评分"
                    android:lines="1"
                    android:ellipsize="end"
                    android:layout_centerVertical="true"
                    android:textColor="#ffffff"
                    android:textSize="12sp"/>
                <Button
                    android:id="@+id/btn_film_search_film"
                    android:layout_width="40dp"
                    android:layout_height="25dp"
                    android:text="购 票"
                    android:gravity="center"
                    android:textSize="8sp"
                    android:layout_centerVertical="true"
                    android:textColor="#ffffff"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/shape_ff7_5"/>
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
