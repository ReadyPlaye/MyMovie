<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.FilmActivity"
    android:orientation="vertical"
    android:background="#141931">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:padding="20dp">
        <ImageView
            android:id="@+id/tv_film_exit"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:src="@drawable/shape_exit"/>
        <EditText
            android:id="@+id/et_h"
            android:layout_toRightOf="@id/tv_film_exit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginLeft="30dp"
            android:lines="1"
            android:textSize="12sp"
            android:paddingLeft="20dp"
            android:singleLine="true"
            android:background="@drawable/shape_fff_90"
            android:hint="请输入要搜索的内容！"/>

        <ImageView
            android:id="@+id/iv_film_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_search"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#1c2243"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <RelativeLayout
            android:id="@+id/rlt_film_release"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="正在热映"
                android:textSize="14sp"
                android:textColor="#ffffff"/>
            <TextView
                android:id="@+id/tv_film_release"
                android:layout_width="55dp"
                android:layout_height="2dp"
                android:background="#e8185e"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rlt_film_coming"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="即将上映"
                android:textSize="14sp"
                android:textColor="#ffffff"/>
            <TextView
                android:id="@+id/tv_film_coming"
                android:layout_width="55dp"
                android:layout_height="2dp"
                android:background="#e8185e"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rlt_film_hot"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="热门电影"
                android:textSize="14sp"
                android:textColor="#ffffff"/>
            <TextView
                android:id="@+id/tv_film_hot"
                android:layout_width="55dp"
                android:layout_height="2dp"
                android:background="#e8185e"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recy_search_film"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v7.widget.RecyclerView>
        <LinearLayout
            android:id="@+id/llt_no_network_film"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="#141931"
            android:orientation="vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/no_network"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="暂无网络"
                android:textColor="#ffffff"
                android:layout_marginTop="40dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/llt_no_search_film"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="#141931"
            android:orientation="vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/no_search"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="没有相关搜索结果"
                android:textColor="#ffffff"
                android:layout_marginTop="40dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="换个词试试吧"
                android:textColor="#ffffff" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>